<h1>Movies</h1>

<p><%= link_to 'New Movie', new_movie_path %></p>

<div class="list">
  
  <% @movies.each do |movie| %>
    <div class="poster">
      <p><%= movie.title %></p>
      <%= image_tag movie.poster_url(:thumb) if movie.poster? %>
      <%= link_to 'delete', movie, :method => :delete, :data => { :confirm => "I am sure???? " } %>
    </div>
  <% end %>

</div>

<%= paginate @movies %>